[Unit]
Description=Stratum
ConditionPathExists=/usr/bin/stratum_bf
ConditionPathExists=/etc/stratum/stratum_bf.env

[Service]
Type=simple
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=stratum_bf

WorkingDirectory=/var/run/stratum
EnvironmentFile=/etc/stratum/stratum_bf.environment

ExecStart=/usr/bin/stratum-entrypoint

ExecStop=/usr/bin/stop-stratum

Restart=on-failure

[Install]
WantedBy=multi-user.target
