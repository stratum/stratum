[Unit]
Description=Stratum service
ConditionPathExists=/usr/bin/stratum_bf

[Service]
Type=simple
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=stratum_bf
WorkingDirectory=/var/run/stratum
EnvironmentFile=/etc/stratum/stratum_bf.env
ExecStart=/bin/bash /usr/bin/stratum-entrypoint
ExecStop=/usr/bin/stop-stratum
Restart=on-failure

[Install]
WantedBy=multi-user.target