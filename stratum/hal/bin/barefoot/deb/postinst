#!/bin/bash
# Working directory and logs
mkdir -p /var/run/stratum
mkdir -p /var/log/stratum

# Setting up huge page for bf_switchd
echo -e "# Required by Stratum\nvm.nr_hugepages = 128" >> /etc/sysctl.conf
sysctl -p /etc/sysctl.conf
mkdir -p /mnt/huge
mount -t hugetlbfs nodev /mnt/huge

# Enables Stratum service
systemctl enable stratum_bf.service
